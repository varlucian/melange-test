{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "apks/*.yaml"
      ],
      "matchStrings": [
        "[{\"depName\": $substringAfter(pipeline[uses=\"git-checkout\"].with.repository, \"https://github.com/\"), \"currentValue\": package.version, \"sourceUrl\": pipeline[uses=\"git-checkout\"].with.repository}]"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "description": "Generic rule: ONLY allow patch updates for terraform - no minor/major",
      "matchFileNames": [
        "apks/terraform-*.yaml"
      ],
      "separateMinorPatch": true,
      "minor": {
        "enabled": false
      },
      "groupName": null,
      "schedule": [
        "before 6am on monday"
      ]
    }
  ]
}
