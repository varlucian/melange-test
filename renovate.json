{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^hashicorp/terraform-terraform-"
      ],
      "groupName": null,
      "major": {
        "enabled": false
      },
      "minor": {
        "enabled": false
      },
      "patch": {
        "enabled": true
      }
    }
  ],
  "prHourlyLimit": 5,
  "recreateClosed": true,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^apks/(ghup|gitea-mirror|terraform-.*)\\.yaml$/"
      ],
      "matchStrings": [
        "package:\\s*\\n\\s*name:\\s*(?<depName>\\S+)\\s*\\n\\s*version:\\s*(?<currentValue>\\S+)[\\s\\S]*?update:[\\s\\S]*?github:[\\s\\S]*?identifier:\\s*(?<packageName>\\S+)",
        "package:\\s*\\n\\s*name:\\s*(?<depName>[^\\s]+)\\s*\\n\\s*version:\\s*(?<currentValue>\\S+)[\\s\\S]*?pipeline:[\\s\\S]*?repository:\\s*https://github.com/(?<packageName>[^/\\s]+/[^/\\s]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "{{{packageName}}}-{{{depName}}}",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^apks/bouncycastle.*\\.yaml$/"
      ],
      "matchStrings": [
        "package:\\s*\\n\\s*name:\\s*(?<depName>bouncycastle-fips)\\s*\\n\\s*version:\\s*(?<currentValue>[0-9.]+)[\\s\\S]*?uri:\\s*https://repo1\\.maven\\.org"
      ],
      "datasourceTemplate": "maven",
      "depNameTemplate": "org.bouncycastle:bc-fips",
      "packageNameTemplate": "org.bouncycastle:bc-fips",
      "versioningTemplate": "maven"
    }
  ],
  "commitMessageAction": "update",
  "commitMessageTopic": "{{packageName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "timezone": "UTC",
  "labels": [
    "dependencies",
    "automated"
  ],
  "automerge": false,
  "major": {
    "automerge": false
  },
  "minor": {
    "automerge": false
  },
  "patch": {
    "automerge": false
  }
}
