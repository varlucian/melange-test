{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "apks/*.yaml"
      ],
      "matchStrings": [
        "[{\"depName\": \"hashicorp/terraform\", \"currentValue\": package.version}]"
      ],
      "depNameTemplate": "hashicorp/terraform",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchPackageNames": [
        "hashicorp/terraform"
      ],
      "allowedVersions": "/^v?1\\.12\\./",
      "automerge": true,
      "schedule": [
        "before 6am on monday"
      ]
    }
  ]
}
