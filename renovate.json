{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "apks/*.yaml"
      ],
      "matchStrings": [
        "[{\"depName\": $substringAfter(pipeline[uses=\"git-checkout\"].with.repository, \"https://github.com/\"), \"currentValue\": package.version, \"sourceUrl\": pipeline[uses=\"git-checkout\"].with.repository}]"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "hashicorp/terraform"
      ],
      "allowedVersions": "/^v?1\\.12\\./",
      "automerge": true,
      "schedule": [
        "before 6am on monday"
      ]
    }
  ]
}
