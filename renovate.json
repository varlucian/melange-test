{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "apks/*.yaml",
        "apks/!(bouncycastle*).yaml"
      ],
      "matchStrings": [
        "[{\"depName\": $substringAfter(pipeline[uses=\"git-checkout\"].with.repository, \"https://github.com/\"), \"currentValue\": package.version, \"sourceUrl\": pipeline[uses=\"git-checkout\"].with.repository}]"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "apks/bouncycastle*.yaml"
      ],
      "matchStrings": [
        "[{\"depName\": package.name, \"packageName\": $join($split($substringAfter(pipeline[uses=\"fetch\"].with.uri, \"https://repo1.maven.org/maven2/\"), \"/\")[0:2], \":\"), \"currentValue\": package.version}]"
      ],
      "datasourceTemplate": "maven",
      "depNameTemplate": "{{depName}}:{{currentValue}}",
      "packageNameTemplate": "{{depName}}:{{currentValue}}",
      "versioningTemplate": "maven"
    }
  ],
  "packageRules": [
    {
      "description": "Generic rule: ONLY allow patch updates for terraform - no minor/major",
      "matchFileNames": [
        "apks/terraform-*.yaml"
      ],
      "separateMinorPatch": true,
      "minor": {
        "enabled": false
      },
      "groupName": null,
      "schedule": [
        "before 6am on monday"
      ]
    }
  ]
}
