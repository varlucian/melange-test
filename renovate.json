{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "apks/amazon-corretto-*.yaml"
      ],
      "matchStrings": [
        "[{\"depName\": \"corretto/corretto-\" & $split(package.version, \".\")[0], \"currentValue\": package.version}]"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "maven"
    },
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "apks/*.yaml",
        "apks/!(bouncycastle*).yaml"
      ],
      "matchStrings": [
        "[{\"depName\": $substringAfter(pipeline[uses=\"git-checkout\"].with.repository, \"https://github.com/\"), \"currentValue\": package.version, \"sourceUrl\": pipeline[uses=\"git-checkout\"].with.repository}]"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "apks/bouncycastle*.yaml"
      ],
      "matchStrings": [
        "($path := $substringAfter(pipeline[uses=\"fetch\"].with.uri, \"https://repo1.maven.org/maven2/\"); $parts := $split($path, \"/\"); $artifact := $parts[2]; $group := $join([$parts[0], $parts[1]], \".\"); [{\"depName\": $artifact, \"packageName\": $group & \":\" & $artifact, \"currentValue\": package.version}])"
      ],
      "datasourceTemplate": "maven"
    }
  ],
  "packageRules": [
    {
      "description": "Generic rule: ONLY allow patch updates for terraform - no minor/major",
      "matchFileNames": [
        "apks/terraform-*.yaml"
      ],
      "separateMinorPatch": true,
      "minor": {
        "enabled": false
      },
      "groupName": null,
      "schedule": [
        "before 6am on monday"
      ]
    }
  ]
}
