{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^hashicorp/terraform-terraform-"
      ],
      "groupName": null,
      "major": {
        "enabled": false
      },
      "minor": {
        "enabled": false
      },
      "patch": {
        "enabled": true
      }
    }
  ],
  "prHourlyLimit": 5,
  "recreateClosed": true,
  "customManagers": [
    {
      "customType": "regex",
      "description": "GitHub releases packages with update.github.identifier",
      "managerFilePatterns": [
        "apks/*.yaml"
      ],
      "matchStrings": [
        "package:\\s*\\n\\s*name:\\s*(?<depName>\\S+)\\s*\\n\\s*version:\\s*(?<currentValue>\\S+)[\\s\\S]*?update:[\\s\\S]*?github:[\\s\\S]*?identifier:\\s*(?<packageName>\\S+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "{{{packageName}}}-{{{depName}}}",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "GitHub releases packages with git-checkout repository",
      "managerFilePatterns": [
        "apks/*.yaml"
      ],
      "matchStrings": [
        "package:\\s*\\n\\s*name:\\s*(?<depName>[^\\s]+)\\s*\\n\\s*version:\\s*(?<currentValue>\\S+)[\\s\\S]*?pipeline:[\\s\\S]*?repository:\\s*https://github.com/(?<packageName>[^/\\s]+/[^/\\s]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "{{{packageName}}}-{{{depName}}}",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Maven packages from repo1.maven.org",
      "managerFilePatterns": [
        "apks/*.yaml"
      ],
      "matchStrings": [
        "package:\\s*\\n\\s*name:\\s*(?<depName>[^\\s]+)\\s*\\n\\s*version:\\s*(?<currentValue>[0-9.]+)[\\s\\S]*?uri:\\s*https://repo1\\.maven\\.org/maven2/(?<groupPath>[^/]+(?:/[^/]+)*)/(?<artifactId>[^/]+)/\\$\\{\\{package\\.version\\}\\}/[^\\s]+"
      ],
      "datasourceTemplate": "maven",
      "depNameTemplate": "{{#replace '/' ':' groupPath}}:{{artifactId}}",
      "packageNameTemplate": "{{#replace '/' ':' groupPath}}:{{artifactId}}",
      "versioningTemplate": "maven"
    }
  ],
  "commitMessageAction": "update",
  "commitMessageTopic": "{{packageName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "timezone": "UTC",
  "labels": [
    "dependencies",
    "automated"
  ],
  "automerge": false,
  "major": {
    "automerge": false
  },
  "minor": {
    "automerge": false
  },
  "patch": {
    "automerge": false
  }
}
