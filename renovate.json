{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^apks/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "package:[\\s\\S]*?name:\\s*terraform-[^\\n]*[\\s\\S]*?version:\\s*(?<currentValue>[^\\s\\n]+)"
      ],
      "depNameTemplate": "hashicorp/terraform",
      "datasourceTemplate": "github-releases",
      "depTypeTemplate": "terraform-version",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchPackageNames": [
        "hashicorp/terraform"
      ],
      "allowedVersions": "/^v?1\\.12\\./",
      "automerge": true,
      "schedule": [
        "before 6am on monday"
      ]
    }
  ]
}
