{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "apks/*.yaml"
      ],
      "matchStrings": [
        "package:\\s*\\n\\s*name:\\s*[^\\n]+\\n\\s*version:\\s*(?<currentValue>[^\\s\\n]+)"
      ],
      "depNameTemplate": "terraform",
      "datasourceTemplate": "github-releases",
      "depTypeTemplate": "terraform-version",
      "extractVersionTemplate": "^v?(?<version>.*)$",
      "registryUrlTemplate": "https://github.com/hashicorp/terraform"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchPackageNames": [
        "terraform"
      ],
      "updateTypes": [
        "patch"
      ],
      "automerge": true,
      "schedule": [
        "before 6am on monday"
      ]
    }
  ]
}
