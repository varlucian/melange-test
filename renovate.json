{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "apks/*.yaml"
      ],
      "matchStrings": [
        "[{\"packageName\": package.name, \"currentValue\": package.version}]"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "hashicorp/terraform"
      ],
      "updateTypes": [
        "patch"
      ],
      "automerge": true,
      "schedule": [
        "before 6am on monday"
      ]
    }
  ]
}
