{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "apks/*.yaml",
        "apks/!(bouncycastle*).yaml"
      ],
      "matchStrings": [
        "[{\"depName\": $substringAfter(pipeline[uses=\"git-checkout\"].with.repository, \"https://github.com/\"), \"currentValue\": package.version, \"sourceUrl\": pipeline[uses=\"git-checkout\"].with.repository}]"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "apks/bouncycastle*.yaml"
      ],
      "matchStrings": [
        "($uri := pipeline[uses=\"fetch\"].with.uri; $parts := $split($uri, \"/\"); $artifactName := $parts[-3]; $pathAfterMaven := $substringAfter($uri, \"https://repo1.maven.org/maven2/\"); $groupPath := $substringBefore($pathAfterMaven, \"/\" & $artifactName); $groupId := $replace($groupPath, \"/\", \".\"); [{\"depName\": $artifactName, \"packageName\": $groupId & \":\" & $artifactName, \"currentValue\": package.version}])"
      ],
      "datasourceTemplate": "maven"
    }
  ],
  "packageRules": [
    {
      "description": "Generic rule: ONLY allow patch updates for terraform - no minor/major",
      "matchFileNames": [
        "apks/terraform-*.yaml"
      ],
      "separateMinorPatch": true,
      "minor": {
        "enabled": false
      },
      "groupName": null,
      "schedule": [
        "before 6am on monday"
      ]
    }
  ]
}
